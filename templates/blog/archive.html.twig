{% extends 'layout.html.twig' %}

{% block title %}Blog Archive{% endblock %}

{% block content %}
    <div style="margin-top: 20px">
        <h1>Blog Archive</h1>
        {% if posts %}
            <div class="well">
                {% for post in posts %}
                    <p>
                        {{ post.time|date('Y-m-d H:i') }}
                        <a href="{{ path('blog.post',{uid: post.id, slug: post.slug}) }}">{{ post.subject }}</a>
                    </p>
                {% endfor %}
            </div>
        {% else %}
            <div class="bg-warning">
                No posts yet
            </div>
        {% endif %}
    </div>
{% endblock %}
